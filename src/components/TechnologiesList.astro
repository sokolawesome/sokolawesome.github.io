---
interface Props {
  technologies: {
    category: string;
    items: string[];
  }[];
}

const { technologies } = Astro.props;
---

<div
  class="mt-8 grid gap-6 grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4"
>
  {
    technologies.map(({ category, items }, i) => (
      <div
        class="fade-in-up border border-[var(--border)] rounded-2xl bg-[var(--surface)] p-6 shadow-sm hover:shadow-md transition-all"
        style={{ animationDelay: `${i * 0.1}s` }}
      >
        <h3 class="text-center text-xl font-mono text-[var(--accent)] mb-4">
          {category.charAt(0).toUpperCase() + category.slice(1)}
        </h3>
        <ul class="flex flex-wrap justify-center gap-2">
          {items.map((tech) => (
            <li class="px-3 py-1 rounded-full text-sm bg-[var(--bg-subtle)] text-[var(--text-base)] border border-[var(--border)]">
              {tech}
            </li>
          ))}
        </ul>
      </div>
    ))
  }
</div>
