---
import MainLayout from '@layouts/MainLayout.astro';
import Header from '@components/Header.astro';
import Footer from '@components/Footer.astro';
import ProjectCard from '@components/ProjectCard.astro';
import projects from '../data/projects.json';

const birthDate = new Date('1997-08-22');
const age = Math.floor(
  (Date.now() - birthDate.getTime()) / (1000 * 60 * 60 * 24 * 365.25)
);
---

<MainLayout title="Aleksandr Sokolov | Portfolio">
  <Header />

  <section id="home" class="py-24 sm:py-32 bg-[var(--bg-base)]">
    <div class="container text-center">
      <h1 class="text-5xl sm:text-6xl md:text-7xl font-mono animate-fade-in">
        Hi, I'm Aleksandr Sokolov
      </h1>
      <p class="mt-6 text-lg sm:text-xl max-w-2xl mx-auto">
        A Software Engineer
      </p>
      <a
        href="#projects"
        class="mt-8 inline-block px-8 py-3 bg-[var(--accent)] text-[var(--bg-base)] rounded-lg hover:bg-[var(--accent-hover)] transition-colors duration-300"
      >
        View Projects
      </a>
    </div>
  </section>

  <section id="about" class="py-20 sm:py-24 bg-[var(--bg-subtle)]">
    <div class="container">
      <h2 class="text-3xl sm:text-4xl font-mono animate-fade-in">About Me</h2>
      <p class="mt-6 text-lg max-w-3xl">
        I'm a Software Engineer. I'm {age} years old and love building things.
      </p>
      <ul class="mt-8 grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 gap-4">
        <li
          class="bg-[var(--bg-base)] p-3 rounded-lg text-center text-[var(--text-base)]"
        >
          JavaScript
        </li>
        <li
          class="bg-[var(--bg-base)] p-3 rounded-lg text-center text-[var(--text-base)]"
        >
          TypeScript
        </li>
        <li
          class="bg-[var(--bg-base)] p-3 rounded-lg text-center text-[var(--text-base)]"
        >
          Astro
        </li>
        <li
          class="bg-[var(--bg-base)] p-3 rounded-lg text-center text-[var(--text-base)]"
        >
          Tailwind CSS
        </li>
      </ul>
    </div>
  </section>

  <section id="projects" class="py-20 sm:py-24 bg-[var(--bg-base)]">
    <div class="container">
      <h2 class="text-3xl sm:text-4xl font-mono animate-fade-in">Projects</h2>
      <div class="mt-8 grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
        {
          projects.map((project) => (
            <ProjectCard
              title={project.title}
              description={project.description}
              link={project.link}
            />
          ))
        }
      </div>
    </div>
  </section>

  <section id="contact" class="py-20 sm:py-24 bg-[var(--bg-subtle)]">
    <div class="container text-center">
      <h2 class="text-3xl sm:text-4xl font-mono animate-fade-in">
        Get in Touch
      </h2>
      <p class="mt-6 text-lg">
        Reach me at <a
          href="mailto:sokolawesome@gmail.com"
          class="text-[var(--accent)] hover:text-[var(--accent-hover)] transition-colors duration-300"
          >sokolawesome@gmail.com</a
        >
      </p>
      <div class="mt-8 flex justify-center space-x-6">
        <a
          href="https://github.com/sokolawesome"
          class="text-[var(--accent)] hover:text-[var(--accent-hover)] text-lg transition-colors duration-300"
          >GitHub</a
        >
        <a
          href="https://www.linkedin.com/in/sokolov-aleksandr/"
          class="text-[var(--accent)] hover:text-[var(--accent-hover)] text-lg transition-colors duration-300"
          >LinkedIn</a
        >
      </div>
    </div>
  </section>

  <Footer />
</MainLayout>

<style>
  .animate-fade-in {
    animation: fadeIn 1s ease-in;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
